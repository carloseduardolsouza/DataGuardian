{
  "name": "dataguardian",
  "version": "0.0.0",
  "description": "Self-hosted open-source backup manager for databases and files",
  "main": "dist/index.js",
  "scripts": {
    "dev": "concurrently --names \"API,UI\" --prefix-colors \"blue,magenta\" --kill-others-on-fail \"tsx watch --env-file=.env src/index.ts\" \"npm run dev --prefix interface\"",
    "build": "npm run build:api && npm run build:ui",
    "build:api": "tsc",
    "build:ui": "npm run build --prefix interface",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src",
    "test": "jest --config jest.config.cjs",
    "test:unit": "jest --config jest.config.cjs tests/unit",
    "test:e2e": "jest --config jest.config.cjs tests/e2e",
    "test:coverage": "jest --config jest.config.cjs --coverage",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "docker:build": "docker build -f docker/Dockerfile -t dataguardian:latest .",
    "docker:publish": "node scripts/docker-publish.cjs",
    "docker:up:all": "node scripts/docker-up-all.cjs"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.993.0",
    "@prisma/client": "^5.22.0",
    "@types/cookie-parser": "^1.4.10",
    "bullmq": "^5.69.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "cron-parser": "^4.9.0",
    "date-fns-tz": "^3.2.0",
    "dotenv": "^17.3.1",
    "express": "^4.21.1",
    "helmet": "^8.0.0",
    "ioredis": "^5.9.3",
    "mysql2": "^3.17.2",
    "nodemailer": "^8.0.1",
    "pg": "^8.18.0",
    "pino": "^9.5.0",
    "ssh2-sftp-client": "^12.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.9.0",
    "@types/nodemailer": "^7.0.10",
    "@types/pg": "^8.16.0",
    "@types/ssh2-sftp-client": "^9.0.6",
    "concurrently": "^9.2.1",
    "jest": "^30.2.0",
    "pino-pretty": "^13.0.0",
    "prisma": "^5.22.0",
    "ts-jest": "^29.4.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
