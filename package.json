{
  "name": "dataguardian",
  "version": "0.0.0",
  "description": "Self-hosted open-source backup manager for databases and files",
  "main": "dist/index.js",
  "scripts": {
    "dev": "concurrently --names \"API,UI\" --prefix-colors \"blue,magenta\" --kill-others-on-fail \"tsx watch --env-file=.env src/index.ts\" \"npm run dev --prefix interface\"",
    "build": "tsc",
    "build:all": "concurrently --names \"API,UI\" \"npm run build\" \"npm run build --prefix interface\"",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src",
    "test": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:coverage": "vitest run --coverage",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "cors": "^2.8.5",
    "cron-parser": "^4.9.0",
    "date-fns-tz": "^3.2.0",
    "dotenv": "^17.3.1",
    "express": "^4.21.1",
    "helmet": "^8.0.0",
    "mysql2": "^3.17.2",
    "pg": "^8.18.0",
    "pino": "^9.5.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.9.0",
    "@types/pg": "^8.16.0",
    "concurrently": "^9.2.1",
    "pino-pretty": "^13.0.0",
    "prisma": "^5.22.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.5"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
